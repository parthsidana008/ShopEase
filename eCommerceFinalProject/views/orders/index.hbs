{{#section 'pageTitle'}}
    My Orders
{{/section}}

<section class="section">
    <div class="section-header">
        <h2 class="section-title">My Orders</h2>
    </div>
    
    {{#if orders.length}}
        <div class="animate-on-scroll">
            <table class="order-table">
                <thead>
                    <tr>
                        <th>Order #</th>
                        <th>Date</th>
                        <th>Items</th>
                        <th>Total Amount</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each orders}}
                        <tr>
                            <td>{{this._id}}</td>
                            <td>{{formatDate this.createdAt "MMM DD, YYYY"}}</td>
                            <td>{{this.items.length}} item(s)</td>
                            <td>${{this.totalAmount}}</td>
                            <td>
                                <span class="status-badge status-{{this.status}}">
                                    {{capitalizeFirst this.status}}
                                </span>
                            </td>
                            <td>
                                <a href="/orders/{{this._id}}" class="btn btn-outline">
                                    View Details
                                </a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    {{else}}
        <div class="empty-state">
            <div class="empty-icon">
                <i class="fas fa-box-open"></i>
            </div>
            <h3>No orders yet</h3>
            <p>You haven't placed any orders yet.</p>
            <a href="/products" class="btn btn-primary">Start Shopping</a>
        </div>
    {{/if}}
</section>
